{
  "compilerOptions": {
    "strict": true,
    "target": "ESNext",
    "downlevelIteration": true,
    "esModuleInterop": true,
    "module": "NodeNext",
    "skipLibCheck": true,
    "verbatimModuleSyntax": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noUncheckedIndexedAccess": true,
    "jsx": "react-jsx",
    "baseUrl": ".",
    "declaration": true,
    "emitDeclarationOnly": true,
    "composite": true,
    "incremental": true
  },
  "references": [
    {
      "path": "./examples/llamaindex-straming"
    },
    {
      "path": "./examples/waku-chat"
    },
    {
      "path": "./packages/jotai-ai"
    }
  ],
  "exclude": ["node_modules"]
}
